<p id="notice"><%= notice %></p>

  <h1>
    <%= link_to 'Flights', flights_path %> |
    <%= link_to 'Airplanes', airplanes_path %> |
    <%= link_to 'Reservations', reservations_path %>

  </h1>
  <br>
  <h2>Flights</h2>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Flight#</th>
      <th>From >></th>
      <th>To </th>

      <th>Seats</th>
      <th>Plane</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.date %></td>
        <td><%= flight.name %></td>
        <td><%= flight.from %></td>
        <td><%= flight.to %></td>

        <td><%= flight.seats %></td>
        <td><%= flight.airplane_id %></td>

        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

