<h1>Burning Airlines</h1>
<p>Search page</p>
<div id="app"></div>

<script type="html/template" id="AppViewTemplate">
  <div id="searchFlights">
    <h1>Flight Search</h1>
    <input type="text" placeholder="from"/>
    <input type="text" placeholder="to"/>
    <button>Search</button>
    <hr/>
  </div>

  <div id="flights">
    <table>
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>From</th>
        <th>to</th>
      </tr>
    </table>
  </div>

  <div id="searchResults">
    <table>
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>From</th>
        <th>to</th>
      </tr>
    </table>
  </div>
</script>

<script type="html/template" id="FlightViewTemplate">
<h1>Flight booking</h1>

<td>{{ name }}</td>
<td>{{ date }}</td>
<td>{{ from }}</td>
<td>{{ to }}</td>

</script>
