<!DOCTYPE html>
<html>
  <head>
    <title>BurningAirlines</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <!-- login & signup nav -->
    <div class='logo'>

      <p class='heading' id='companyName'>Goodbye Forever Airlines</p>

      <p class='heading' id='slogan'></p>

      <img id="plane" src="http://res.cloudinary.com/jamestheo/image/upload/v1499309069/burning_airplane_mnr713.png" alt="">
    </div>


    <nav>
      <% unless @current_user.present? %>
      <%= link_to 'Login', login_path %> | <%= link_to 'Signup', new_user_path %>
      <% else %>
      Welcome, <%= @current_user.name %> |
      <%= link_to 'Logout', login_path, method: :delete %>
      <% end %>
    </nav>

    <%= yield %>
  </body>
</html>
